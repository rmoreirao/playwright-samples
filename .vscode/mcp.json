{
	"servers": {
		"playwright-mcp": {
			"command": "npx",
			"args": [
				"@playwright/mcp@latest"
			]
		},
		 "github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/",
			"headers": {
				"Authorization": "Bearer ${input:github_mcp_pat}"
			}
		}
	},
	"inputs":
	[
    {
      "type": "promptString",
      "id": "github_mcp_pat",
      "description": "GitHub Personal Access Token",
      "password": true
    }
  ]
}